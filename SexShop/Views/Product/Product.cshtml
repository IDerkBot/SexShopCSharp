@using SexShop.Domain.Entity
@using Microsoft.AspNetCore.Mvc.Razor
@model Product

@{
    ViewBag.Title = Model.Name;
    Layout = "_Layout";
}

<div class="container">
    @* <div class="row justify-content-center"> *@
    @*     $1$ <div class="col-xl-4 col-lg-6 col-md-6 col-sm-8 col-11 col offset-xl-1 offset-lg-1"> #1# *@
    @*     $1$     <div class=""> #1# *@
    @*     $1$         <a> #1# *@
    @*     $1$             <img src="/image/girl.png" alt=""> #1# *@
    @*     $1$         </a> #1# *@
    @*     $1$         <a> #1# *@
    @*     $1$             <img src="/image/girl.png" alt=""> #1# *@
    @*     $1$         </a> #1# *@
    @*     $1$         <a> #1# *@
    @*     $1$             <img src="/image/girl.png" alt=""> #1# *@
